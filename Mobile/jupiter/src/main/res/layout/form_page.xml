<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        xmlns:tb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tb:titleText="表单"
        tb:titleLeftIcoVisibility="true"
        tb:titleRightTextVisibility="true"
        tb:titleRightText="@string/jupiter_edit">

    </com.yun9.jupiter.widget.JupiterTitleBarLayout>

    <LinearLayout
        android:id="@+id/formpage"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</RelativeLayout>