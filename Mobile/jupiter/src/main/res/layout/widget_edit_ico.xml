<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.yun9.jupiter.widget.JupiterRowStyleTitleLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowStyleTitleShowMainImage="false"
        app:rowStyleTitleShowArrow="false"/>
    <com.yun9.jupiter.view.JupiterGridView
        android:id="@+id/item_grid_view"
        android:background="@color/drak"
        android:layout_below="@id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:gravity="center"
        android:horizontalSpacing="4dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dip"
        android:padding="4dip"
        android:listSelector="@color/transparent"
        android:numColumns="4"></com.yun9.jupiter.view.JupiterGridView>
</RelativeLayout>