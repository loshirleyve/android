<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_style_background">

    <RelativeLayout
        android:id="@+id/row_style_sutitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/image_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="26dp"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/main_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:src="@drawable/user_head" />

            <LinearLayout
                android:id="@+id/main_content_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/jupiter_row_cell_title"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/title_tv"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="@string/jupiter_row_cell_time"
                        android:textSize="12dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/jupiter"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:textColor="#374760"/>

                <TextView
                    android:id="@+id/sutitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jupiter"
                    android:textSize="12dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:id="@+id/subtitle_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:showDividers="middle"></LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/arrow_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/hot_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="@string/jupiter_ne_version"
                android:textColor="@color/whites"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/selectmode_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_empty"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/arrow_right_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right" />


            <Button
                android:id="@+id/arrow_right_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:id="@+id/line_v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/image_title_ll"
            android:background="@color/devide_line" />
    </RelativeLayout>
</RelativeLayout>