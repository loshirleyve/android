<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yun9.jupiter.widget.JupiterRowStyleTitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowStyleTitleShowArrow="false"
        app:rowStyleTitleShowMainImage="false"></com.yun9.jupiter.widget.JupiterRowStyleTitleLayout>
    <com.yun9.jupiter.view.JupiterGridView
        android:id="@+id/userGridView"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="4dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dip"
        android:padding="4dip"
        android:listSelector="@color/transparent"
        android:numColumns="4"></com.yun9.jupiter.view.JupiterGridView>
</RelativeLayout>