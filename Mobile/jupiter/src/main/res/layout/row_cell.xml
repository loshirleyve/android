<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/image_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="26dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/main_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/user_head"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="@string/jupiter_row_cell_title"/>

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp"
                    android:text="@string/jupiter_row_cell_time"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/sutitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/jupiter_row_cell_sutitle"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/arrow_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/arrow_right_iv"
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>

    <View
        android:id="@+id/line_v"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>