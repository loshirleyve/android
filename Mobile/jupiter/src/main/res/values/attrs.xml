<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="JupiterTitleBarLayout">
        <attr name="titleText" format="string"></attr>
        <attr name="sutitleText" format="string"></attr>
        <attr name="titleLeftText" format="string"></attr>
        <attr name="titleRightText" format="string"></attr>

        <attr name="titleTextVisibility" format="boolean"></attr>
        <attr name="sutitleTextVisibility" format="boolean"></attr>
        <attr name="titleLeftTextVisibility" format="boolean"></attr>
        <attr name="titleLeftIcoVisibility" format="boolean"></attr>
        <attr name="titleLeftIcoSrc" format="reference"></attr>
        <attr name="titleRightTextVisibility" format="boolean"></attr>
        <attr name="titleRightIcoVisibility" format="boolean"></attr>
        <attr name="titleRightIcoSrc" format="reference"></attr>
        <attr name="backgroungColor" format="color" />
    </declare-styleable>

    <declare-styleable name="JupiterRowStyleSutitleLayout">
        <attr name="rowStyleSutitleTitleText" format="string"></attr>
        <attr name="rowStyleSutitleText" format="string"></attr>
        <attr name="rowStyleSutitleShowArrow" format="boolean" />
        <attr name="rowStyleSutitleShowMainImage" format="boolean" />
        <attr name="rowStyleSutitleShowTimeText" format="boolean" />
        <attr name="rowStyleSutitleMainImage" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="JupiterRowStyleTitleLayout">
        <attr name="rowStyleTitleText" format="string"></attr>
        <attr name="rowStyleTitleShowHotText" format="boolean" />
        <attr name="rowStyleTitleShowArrow" format="boolean" />
        <attr name="rowStyleTitleShowMainImage" format="boolean" />
        <attr name="rowStyleTitleMainImage" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="SegmentedGroup">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="tint_color" format="color" />
        <attr name="checked_text_color" format="color" />
    </declare-styleable>


    <declare-styleable name="JupiterSegmentedItem">
        <attr name="segmented_item_titleText" format="string"></attr>
        <attr name="segmented_item_descText" format="string"></attr>
        <attr name="segmented_item_ico" format="reference"></attr>
        <attr name="segmented_item_ico_selected" format="reference"></attr>
        <attr name="segmented_item_text_color_selected" format="color"></attr>
        <attr name="segmented_item_text_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="JupiterImageButtonLayout">
        <attr name="imageButtonIcoSrc" format="reference"></attr>
        <attr name="imageButtonText" format="string"></attr>

    </declare-styleable>
</resources>