<?xml version="1.0" encoding="utf-8"?>
<repositorys>
    <!-- 发送消息 -->
    <repository>
        <name>AddMsgCard</name>
        <action>com.yun9.ws.biz.service.AddMsgCardService</action>
        <type>yun9</type>
    </repository>

    <!-- 获取用户分组消息 -->
    <repository>
        <name>QueryMsgsGroup</name>
        <action>com.yun9.ws.biz.service.QueryMsgsGroupService</action>
        <output>
            <classname>com.yun9.wservice.model.MsgsGroup</classname>
            <type>list</type>
        </output>
        <type>yun9</type>
    </repository>

    <!-- 根据不同场景获取消息卡片 -->
    <repository>
        <name>QueryMsgCardByScene</name>
        <action>com.yun9.ws.biz.service.QueryMsgCardBySceneService</action>
        <output>
            <classname>com.yun9.wservice.model.MsgCard</classname>
            <type>list</type>
        </output>
        <type>yun9</type>
    </repository>

    <!-- 获取消息卡片详细信息基于消息卡片ID -->
    <repository>
        <name>QueryMsgCardInfoById</name>
        <action>com.yun9.ws.biz.service.QueryMsgCardInfoByIdService</action>
        <output>
            <classname>com.yun9.wservice.model.MsgCard</classname>
            <type>object</type>
        </output>
        <type>yun9</type>
    </repository>

    <!-- 获取消息卡片详细信息基于订单ID -->
    <repository>
        <name>QueryMsgCardBySourceService</name>
        <action>com.yun9.ws.biz.service.QueryMsgCardBySourceService</action>
        <output>
            <classname>com.yun9.wservice.model.MsgCard</classname>
            <type>object</type>
        </output>
        <type>yun9</type>
    </repository>

    <!--点赞消息卡片服务-->
    <repository>
        <name>AddPraiseLikeByMsgCardId</name>
        <action>com.yun9.ws.biz.service.AddPraiseLikeByMsgCardIdService</action>
        <output>
            <classname>com.yun9.wservice.model.MsgCardPraise</classname>
            <type>object</type>
        </output>
        <type>yun9</type>
    </repository>
    <!--消息卡片评论-->
    <repository>
        <name>AddMsgCardComment</name>
        <action>com.yun9.ws.biz.service.AddMsgCardCommentService</action>
        <type>yun9</type>
    </repository>

    <!--消息卡片转发-->
    <repository>
        <name>AddMsgCardShare</name>
        <action>com.yun9.ws.biz.service.AddMsgCardShareService</action>
        <type>yun9</type>
    </repository>

    <!-- 查询话题 -->
    <repository>
        <name>QueryTopicsService</name>
        <action>com.yun9.ws.biz.service.QueryTopicsService</action>
        <output>
            <classname>com.yun9.wservice.model.TopicBean</classname>
            <type>list</type>
        </output>
        <type>yun9</type>
    </repository>

    <!-- 掷骰子 -->
    <repository>
        <name>AddRandomNumber</name>
        <action>com.yun9.ws.biz.service.AddRandomNumberService</action>
        <type>yun9</type>
    </repository>

    <!-- 标记消息为已读 -->
    <repository>
        <name>UpdateMsgCardStateByIdsService</name>
        <action>com.yun9.ws.biz.service.UpdateMsgCardStateByIdsService</action>
        <type>yun9</type>
    </repository>

</repositorys>