<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/row_style_background">

    <ImageView
        android:id="@+id/ico_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:src="@drawable/small_ico_unkwon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/state_ll"
        android:layout_toRightOf="@+id/ico_iv">

        <TextView
            android:id="@+id/filename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件名文件名文件名文件名文件名文件名"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filename_tv"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/file_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-01-01 10:30:00" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/file_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100kb" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/state_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/select_state_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/selector"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/unselect_state_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/selector_empty"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/delete_state_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icn_delete"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>