<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleRightTextVisibility="true"
        app:titleRightText="@string/app_complete"
        app:titleText="@string/complain"
        android:focusableInTouchMode="true"
        android:focusable="true">
    </com.yun9.jupiter.widget.JupiterTitleBarLayout>
    <com.yun9.jupiter.widget.JupiterSpringbackScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.yun9.wservice.view.order.OrderProductBaseListWidget
                android:id="@+id/product_list_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.yun9.wservice.view.order.OrderProductBaseListWidget>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/complain_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:scrollbars="vertical"
                    android:text="投诉内容"/>
                <EditText
                    android:id="@+id/complain_et"
                    android:layout_toRightOf="@id/complain_tip_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="10"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line"/>
            <com.yun9.wservice.view.order.OrderProviderWidget
                android:id="@+id/order_provider_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.yun9.wservice.view.order.OrderProviderWidget>
        </LinearLayout>
    </com.yun9.jupiter.widget.JupiterSpringbackScrollView>
</RelativeLayout>