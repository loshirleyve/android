<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/groupbackground">

    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        xmlns:tb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tb:titleText="测试定位"
        tb:sutitleText="请求次数：0"
        tb:sutitleTextVisibility="true"
        tb:titleLeftIcoVisibility="true">
    </com.yun9.jupiter.widget.JupiterTitleBarLayout>

    <LinearLayout
        android:id="@+id/buttonbar"
        android:layout_below="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开始"/>

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="停止"/>

        <Button
            android:id="@+id/requestlocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请求地理位置"/>
    </LinearLayout>

    <TextView
        android:layout_below="@+id/buttonbar"
        android:id="@+id/locationinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"/>

    <TextView
        android:layout_below="@+id/locationinfo"
        android:id="@+id/poiinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>