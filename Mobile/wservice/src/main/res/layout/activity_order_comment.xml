<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleRightTextVisibility="true"
        app:titleRightText="@string/app_complete"
        app:titleText="@string/comment_work_order"
        android:focusableInTouchMode="true"
        android:focusable="true">
        </com.yun9.jupiter.widget.JupiterTitleBarLayout>
    <com.yun9.jupiter.widget.JupiterSpringbackScrollView
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.yun9.wservice.view.order.OrderProductBaseListWidget
                android:id="@+id/product_list_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.yun9.wservice.view.order.OrderProductBaseListWidget>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/work_order_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#374760"
                    android:text="工单号 9898989898"/>
                <TextView
                    android:id="@+id/work_order_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#374760"
                    android:text="代理缴交社保"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/purple_font"
                    android:text="@string/order_score"/>
                <RatingBar
                    android:id="@+id/star_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:rating="5"
                    android:progressDrawable="@drawable/room_rating_bar"
                    android:numStars="5"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="-20dp"
                android:layout_height="1dp"
                android:background="@color/devide_line"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:paddingTop="8dp"
               android:paddingBottom="8dp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/comment_tip"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/purple_font"
                   android:text="@string/write_comment"/>
               <EditText
                   android:id="@+id/comment_et"
                   android:layout_toRightOf="@id/comment_tip"
                   android:layout_alignParentRight="true"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="8dp"
                   android:inputType="textMultiLine"
                   android:gravity="top"
                   android:minLines="4"
                   android:maxLines="10"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="10dp"/>
           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line"/>
            <com.yun9.wservice.view.order.OrderProviderWidget
                android:id="@+id/order_provider_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.yun9.wservice.view.order.OrderProviderWidget>
        </LinearLayout>
    </com.yun9.jupiter.widget.JupiterSpringbackScrollView>
</RelativeLayout>