<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <com.yun9.jupiter.widget.JupiterTitleBarLayout xmlns:tb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tb:titleLeftIcoSrc="@drawable/left_white"
        tb:titleLeftIcoVisibility="true"
        tb:titleText=" " />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:src="@drawable/login_picture" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:background="@color/title_color"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_button_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@color/whites"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/free_reg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="免费注册"
                android:textColor="@color/whites"
                android:textSize="15dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/virtual_account"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="模拟账户"
                android:textColor="@color/whites"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
