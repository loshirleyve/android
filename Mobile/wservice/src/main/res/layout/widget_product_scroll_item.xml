<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/store_bg1"
    >

    <LinearLayout
        android:id="@+id/productImgscroll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/productImgItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何购买服务组合"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/productImgItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务购买指南"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/productImgItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协助中小企业有效管理公司服务"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="6dp"/>
    </LinearLayout>

</RelativeLayout>