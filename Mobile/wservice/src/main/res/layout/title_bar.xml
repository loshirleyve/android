<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/title" >

    <View android:id="@+id/title_left_view"
        style="@style/title_left"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/title_left_ll"
       style="@style/title_left">
        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/title_left_btn_return"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/title_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/whites"
            android:textSize="15dp"
            android:gravity="center"
            android:text="@string/app_return"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_center_ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/whites"
            android:layout_gravity="center"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/title_sutitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/whites"
            android:text="选中了3个图片，2个文件"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_right_ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/title_right_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/whites"
            android:text="@string/app_complete"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
