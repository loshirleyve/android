<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.yun9.jupiter.widget.JupiterRowStyleSutitleLayout
    android:id="@id/subtitle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rowStyleSutitleShowMainImage="false"
    app:rowStyleSutitleShowArrow="false"/>
    <View
        android:id="@+id/line_v"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/subtitle_layout"
        android:background="@color/devide_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_v"
        android:background="@color/whites"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/purple_font"
                android:text="@string/recharge_id_tip"/>
            <TextView
                android:id="@+id/recharge_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/purple_font"
                android:text="88888888888888"/>
        </LinearLayout>
        <TextView
            android:id="@+id/recharge_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/purple_font"
            android:text="已确认"/>
    </RelativeLayout>
</RelativeLayout>