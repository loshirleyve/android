<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/groupbackground">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleText="@string/checkstand">
    </com.yun9.jupiter.widget.JupiterTitleBarLayout>
    <com.yun9.jupiter.widget.JupiterSpringbackScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yun9.wservice.view.payment.PaymentOrderInfoWidget
                android:id="@+id/payment_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.yun9.wservice.view.payment.PaymentOrderInfoWidget>

            <com.yun9.jupiter.widget.JupiterRowStyleSutitleLayout
                android:id="@+id/payment_payway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rowStyleSutitleShowMainImage="false"
                app:rowStyleSutitleShowTimeText="false"
                app:rowStyleSutitleShowSutitleText="false"
                app:rowStyleSutitleTitleText="支付方式"
                android:layout_marginTop="15dp"/>

            <com.yun9.jupiter.widget.JupiterRowStyleSutitleLayout
                android:id="@+id/payment_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rowStyleSutitleShowMainImage="false"
                app:rowStyleSutitleShowTimeText="false"
                app:rowStyleSutitleTitleText="余额"
                app:rowStyleSutitleText="0元"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@color/whites"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:textColor="@color/purple_font"
                        android:text="支付总额"/>
                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/gray_font"
                        android:paddingRight="10dp"
                        android:text="0元"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/purple_font"
                        android:paddingLeft="10dp"
                        android:text="-余额支付"/>
                    <TextView
                        android:id="@+id/use_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/gray_font"
                        android:paddingRight="10dp"
                        android:text="0元"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/devide_line"
                    android:layout_marginTop="10dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp">
                    <TextView
                        android:id="@+id/remain_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/title_color"
                        android:textSize="16dp"
                        android:text="0元"/>
                    <TextView
                        android:layout_toLeftOf="@id/remain_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="还需支付: "/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </com.yun9.jupiter.widget.JupiterSpringbackScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/drak">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal|right"
            android:orientation="horizontal"
            android:background="@color/whites"
            android:paddingRight="20dp">

            <ImageButton
                android:id="@+id/go_to_pay_ib"
                android:background="@drawable/zhifudingdan"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>