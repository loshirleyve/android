<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whites"
    android:paddingTop="10dp"
    android:paddingBottom="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/work_order_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#374760"
            android:text="工单号 9898989898"/>
        <TextView
            android:id="@+id/work_order_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColor="#374760"
            android:text="代理缴交社保"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/work_order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/devide_line"
            android:text="已完成"/>
        <LinearLayout
            android:id="@+id/btn_ll"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_order_state_tv"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/comment_work_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_border"
                android:padding="5dp"
                android:textSize="14dp"
                android:text="评价工单"/>
            <TextView
                android:id="@+id/checkout_work_order_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_border"
                android:padding="5dp"
                android:textSize="14dp"
                android:text="查看评价"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>