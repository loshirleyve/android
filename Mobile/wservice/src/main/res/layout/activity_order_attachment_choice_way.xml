<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleText="@string/attach_submit_ways"/>
    <LinearLayout
        android:id="@+id/confirm_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/whites">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/app_ok"
            android:layout_gravity="center"
            android:textColor="@color/title_color"/>
    </LinearLayout>
    <com.yun9.jupiter.widget.JupiterSpringbackScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/confirm_ll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.yun9.wservice.view.order.OrderAttachWayExpressWidget
                android:id="@+id/express_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.yun9.wservice.view.order.OrderAttachWayVistWidget
                android:id="@+id/vist_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.yun9.wservice.view.order.OrderAttachWayEmailWidget
                android:id="@+id/email_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.yun9.wservice.view.order.OrderAttachWaySelfWidget
                android:id="@+id/self_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.yun9.jupiter.widget.JupiterRowStyleTitleLayout
                android:id="@+id/cancel_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rowStyleTitleShowHotText="false"
                app:rowStyleTitleShowArrow="false"
                app:rowStyleTitleShowMainImage="false"
                app:rowStyleTitleText="@string/app_cancel"/>
        </LinearLayout>
    </com.yun9.jupiter.widget.JupiterSpringbackScrollView>

</RelativeLayout>