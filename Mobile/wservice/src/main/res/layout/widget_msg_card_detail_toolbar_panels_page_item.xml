<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_card_btn_background">
        <ImageView
            android:id="@+id/msg_card_action_image"
            style="@style/msg_card_action_btn_ico"
            android:src="@drawable/turns"/>
        <TextView
            android:id="@+id/msg_card_action_title"
            android:layout_below="@id/msg_card_action_image"
            android:layout_marginTop="18dp"
            style="@style/msg_card_btn_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:text="掷骰子"/>
</RelativeLayout>