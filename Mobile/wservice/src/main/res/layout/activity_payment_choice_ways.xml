<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/groupbackground">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleText="@string/payment_ways"/>
    <com.yun9.jupiter.widget.JupiterSpringbackScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:id="@+id/payment_ways_inst_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14dp"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               android:textColor="@color/devide_line"
               android:text="支付给深圳市顶聚科技有限公司"/>
           <com.yun9.jupiter.widget.JupiterListView
               android:id="@+id/listview"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           </com.yun9.jupiter.widget.JupiterListView>
       </LinearLayout>
    </com.yun9.jupiter.widget.JupiterSpringbackScrollView>
    <LinearLayout
        android:id="@+id/confirm_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/whites">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/app_ok"
            android:layout_gravity="center"
            android:textColor="@color/title_color"/>
    </LinearLayout>
</RelativeLayout>