<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whites">


    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        xmlns:tb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/msg_card_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tb:titleText="@string/activity_msg_card_detail_title"
        tb:titleLeftIcoVisibility="true"
        tb:titleLeftTextVisibility="true"/>




    <com.yun9.pulltorefresh.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip"
        android:layout_below="@+id/msg_card_detail_title">

        <com.yun9.wservice.view.msgcard.MsgCardInDetailWidget
            android:id="@+id/msg_card_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.yun9.wservice.view.msgcard.MsgCardInDetailWidget>

    </com.yun9.pulltorefresh.PullToRefreshScrollView>




</RelativeLayout>