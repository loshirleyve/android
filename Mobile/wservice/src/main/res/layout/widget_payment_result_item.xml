<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/base_info_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pay_way_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray_font"/>
        <TextView
            android:id="@+id/pay_time_tv"
            android:layout_toRightOf="@id/pay_way_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray_font"/>
        <TextView
            android:id="@+id/pay_amount_tv"
            android:layout_toRightOf="@id/pay_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:textColor="@color/gray_font"/>
        <TextView
            android:id="@+id/pay_state_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray_font"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/extra_info_ll"
        android:layout_below="@id/base_info_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp">
        <ImageView
            android:id="@+id/user_upload_image_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/user_confirm_content_tv"
            android:layout_toRightOf="@id/user_upload_image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/gray_font"
            android:textSize="12dp"
            android:text="这是用户确认的信息"/>
        <TextView
            android:id="@+id/confirm_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/title_color"
            android:textColor="@color/whites"
            android:padding="5dp"
            android:text="我已支付"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@color/devide_line"
        android:layout_below="@id/extra_info_ll"/>
</RelativeLayout>