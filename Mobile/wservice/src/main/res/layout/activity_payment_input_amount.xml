<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleText="@string/payment_ways"/>
    <LinearLayout
        android:id="@+id/confirm_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/app_ok"
            android:layout_gravity="center"
            android:textColor="@color/whites"/>
    </LinearLayout>
    <com.yun9.jupiter.widget.JupiterSpringbackScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/confirm_ll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whites"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="22dp"
                android:textColor="@color/title_color"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:hint="请输入金额"
                android:selectAllOnFocus="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"/>
            <com.yun9.jupiter.widget.JupiterRowStyleTitleLayout
                android:id="@+id/no_use_balance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:rowStyleTitleShowMainImage="false"
                app:rowStyleTitleShowArrow="false"
                app:rowStyleTitleShowHotText="false"
                app:rowStyleTitleText="不使用余额"
                ></com.yun9.jupiter.widget.JupiterRowStyleTitleLayout>
        </LinearLayout>
    </com.yun9.jupiter.widget.JupiterSpringbackScrollView>
</RelativeLayout>