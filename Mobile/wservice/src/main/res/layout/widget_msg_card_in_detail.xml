<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">

    <com.yun9.wservice.view.msgcard.MsgCardWidget
        app:showLastComment="false"
        app:showToolbar="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_card_info"/>

    <LinearLayout
        android:layout_below="@+id/msg_card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.yun9.jupiter.widget.JupiterSegmentedGroup
            android:id="@+id/msg_card_detail_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </com.yun9.jupiter.widget.JupiterSegmentedGroup>

    </LinearLayout>



</RelativeLayout>