<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whites"
        android:layout_margin="10dp"
        android:id="@+id/msg_card_info"
        android:orientation="vertical">
        <TextView
            android:id="@+id/msg_card_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="@string/msg_card_context"/>

        <FrameLayout
            android:id="@+id/msg_card_image_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/location_ico_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/landmark"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/msg_card_location_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="@color/devide_line"
                    android:text="@string/msg_card_location"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/msg_card_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/devide_line"
                    android:text="@string/msg_card_time" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/msg_card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.yun9.jupiter.widget.JupiterSegmentedGroup
            android:id="@+id/msg_card_detail_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yun9.jupiter.widget.JupiterSegmentedItem
                xmlns:segitem="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                segitem:segmented_item_titleText="@string/msg_card_comment"
                segitem:segmented_item_descText="99+"
                segitem:segmented_item_text_color="@color/drak"
                segitem:segmented_item_text_color_selected="@color/title_color"
                segitem:segmented_item_ico="@drawable/com1"
                segitem:segmented_item_ico_selected="@drawable/com2">
            </com.yun9.jupiter.widget.JupiterSegmentedItem>

            <com.yun9.jupiter.widget.JupiterSegmentedItem
                xmlns:segitem="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                segitem:segmented_item_titleText="@string/msg_card_praise"
                segitem:segmented_item_descText="99+"
                segitem:segmented_item_ico="@drawable/star1"
                segitem:segmented_item_text_color="@color/drak"
                segitem:segmented_item_text_color_selected="@color/title_color"
                segitem:segmented_item_ico_selected="@drawable/star2">
            </com.yun9.jupiter.widget.JupiterSegmentedItem>

            <com.yun9.jupiter.widget.JupiterSegmentedItem
                xmlns:segitem="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                segitem:segmented_item_titleText="@string/msg_card_share"
                segitem:segmented_item_descText="99+"
                segitem:segmented_item_ico="@drawable/fw1"
                segitem:segmented_item_text_color="@color/drak"
                segitem:segmented_item_text_color_selected="@color/title_color"
                segitem:segmented_item_ico_selected="@drawable/fw2">
            </com.yun9.jupiter.widget.JupiterSegmentedItem>

        </com.yun9.jupiter.widget.JupiterSegmentedGroup>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/drak"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>



</RelativeLayout>