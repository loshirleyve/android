<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoVisibility="true"
        app:titleText="@string/recharge">
    </com.yun9.jupiter.widget.JupiterTitleBarLayout>
        <com.yun9.jupiter.widget.JupiterSpringbackScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_bar"
            android:background="@color/groupbackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/whites">
                <com.yun9.jupiter.widget.JupiterRowStyleTitleLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rowStyleTitleShowMainImage="false"
                    app:rowStyleTitleText="@string/payment_ways"
                    app:rowStyleTitleShowHotText="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:text="@string/recharge_money"/>
                    <EditText
                        android:id="@+id/recharge_money_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="@string/recharge_hint"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:textSize="16dp"
                        android:textColor="@color/red"
                        android:background="@null"
                        android:gravity="right"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.yun9.jupiter.widget.JupiterSpringbackScrollView>
    <LinearLayout
        android:id="@+id/confirm_recharge_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/confirm_recharge"
            android:layout_gravity="center"
            android:textColor="@color/whites"/>
    </LinearLayout>
</RelativeLayout>