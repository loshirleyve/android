<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_user_info">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        xmlns:tb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tb:titleText="@string/user_infoo"
        tb:titleLeftIcoSrc="@drawable/arrow_left"
        tb:titleLeftIcoVisibility="true"/>

    <com.yun9.jupiter.widget.JupiterScrollView
        android:layout_below="@id/user_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yun9.wservice.view.myself.UserInfoWidget
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            </com.yun9.wservice.view.myself.UserInfoWidget>

    </com.yun9.jupiter.widget.JupiterScrollView>
</RelativeLayout>