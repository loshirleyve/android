<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ext:titleLeftIcoVisibility="true"
        ext:titleText="@string/topic">

    </com.yun9.jupiter.widget.JupiterTitleBarLayout>

    <LinearLayout
        android:layout_below="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yun9.jupiter.widget.JupiterImageEditLayout
                android:id="@+id/topic_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ext:image_ico_src="@drawable/select_topoc"
                ext:image_edit_hint="@string/topic_tips"></com.yun9.jupiter.widget.JupiterImageEditLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/topic_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/transparent">

        </ListView>
    </LinearLayout>
</RelativeLayout>