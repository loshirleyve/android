<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/advisor_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:textColor="@color/devide_line"
        android:text="@string/advisor"/>
    <RelativeLayout
        android:layout_below="@id/advisor_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/whites">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/user_head_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/upload_icon"/>
            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#374760"
                android:text="阮小玉"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/contact_us_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="13dp"
                android:textColor="@color/red"

                android:background="@drawable/button_border"
                android:text="沟通咨询"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>