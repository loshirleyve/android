<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yun9.jupiter.widget.JupiterTitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLeftIcoSrc="@drawable/arrow_left"
        app:titleLeftIcoVisibility="true"
        app:titleLeftText="@string/setting"
        app:titleLeftTextVisibility="true"
        app:titleRightText="@string/app_ok"
        app:titleRightTextVisibility="true"
        app:titleText="@string/setting_change_password"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pass_prompt"
        android:textSize="18dp"
        android:gravity="center"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ori_pass"
        android:textSize="18dp"/>
    <EditText
        android:padding="15dp"
        android:background="@color/whites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ori_pass_prompt"
        android:textSize="18dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_pass"
        android:textSize="18dp"/>
    <EditText
        android:padding="15dp"
        android:background="@color/whites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_pass_prompt"
        android:textSize="18dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sure_pass"
        android:textSize="18dp"/>
    <EditText
        android:padding="15dp"
        android:background="@color/whites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sure_pass_prompt"
        android:textSize="18dp"/>


</LinearLayout>