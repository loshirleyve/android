<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/form_dialog_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@id/form_dialog_titleImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/form_ic_launcher" />

    <TextView
        android:id="@id/form_dialog_titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/form_dialog_titleImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="标题提示内容"
        android:textColor="#06A6E1"
        android:textSize="19sp"
        android:visibility="visible" />
    
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/form_dialog_titleText"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#06A6E1"
        />
    
</RelativeLayout>