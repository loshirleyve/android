    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30.0dip" >

            <LinearLayout
                android:id="@id/form_cell_attchment_add"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/form_cell_attchment_btn_add_select"
                android:gravity="center" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/form_ic_attachment" />
            </LinearLayout>
        </RelativeLayout>
    

</LinearLayout>