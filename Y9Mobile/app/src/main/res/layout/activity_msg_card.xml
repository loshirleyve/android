<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whites"
    tools:context="com.yun9.mobile.msg.activity.MsgCardActivity" >

    <include
        android:id="@+id/button_bar_group"
        layout="@layout/card_detail_bar" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/button_bar_group"
        android:background="@color/devide_line" />

    <LinearLayout
        android:id="@+id/main_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:background="@color/whites"
        android:orientation="vertical" >

        <!-- 标题，操作按钮 -->

        <com.yun9.mobile.framework.view.TitleBarView
            android:id="@+id/title_bar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/refresh_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrMode="both" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <!-- 消息卡片内容 -->

                <com.yun9.mobile.msg.view.MsgCardView
                    android:id="@+id/msgcard_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </com.yun9.mobile.msg.view.MsgCardView>
                <!-- 附件信息 -->

                <FrameLayout
                    android:id="@+id/msgcard_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
				<LinearLayout
       android:id="@+id/like_linearlayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginLeft="5dp"
       android:orientation="horizontal"
       android:visibility="gone">
       <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/liked"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />
        	<TextView
            android:id="@+id/likerPer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
            android:gravity="top"
            android:textColor="@color/them_red"
            android:textSize="15sp" 
            android:text="@string/msgcard_item_msg_context"/>
       </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_dice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
        			android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/dice_easyicon_net_35"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvDicer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="top"
                        android:text="@string/msgcard_item_msg_context"
                        android:textColor="#3333cc"
                        android:textSize="15sp" />
                </LinearLayout>
                <!-- 地理位置显示 -->

                <LinearLayout
                    android:id="@+id/ll_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/ic_locate"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="top"
                        android:textColor="@color/lightblue"
                        android:textSize="12sp" />
                </LinearLayout>
                <!-- 评论 -->

                <com.astuetz.PagerSlidingTabStrip
                    android:id="@+id/comment_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:cacheColorHint="@android:color/transparent"
                    app:pstsDividerColor="#FF33B5E6"
                    app:pstsIndicatorColor="#af251c"
                    app:pstsTabPaddingLeftRight="14dip"
                    app:pstsUnderlineColor="#b94a48" />

                <LinearLayout
                    android:id="@+id/progressing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whites"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/skin_progress" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/common_loading"
                        android:textSize="14sp" />
                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    </LinearLayout>

</RelativeLayout>