<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/title" >

    <ImageButton
        android:id="@+id/title_btn_left"
        style="@style/title_button_left"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mini_webview_back"
        android:visibility="gone" />

   <ImageButton
        android:id="@+id/title_btn_return"
        style="@style/title_btn_return"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mini_webview_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_btn_funcnav"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/item_buttom_click_background"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/commit"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:visibility="gone"  />

</RelativeLayout>