<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="24dp"
            android:background="@drawable/mine_item_background"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/commitSign"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:id="@+id/textView"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/lightblue"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_sign_time"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_sign_addr"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/lightblue"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_back_white"
                    android:layout_margin="4dp"
                    android:text="@string/commit"
                    android:id="@+id/btn_sign_commit"/>
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/lightblue"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_back_white"
                    android:text="@string/app_cancel"
                    android:id="@+id/btn_sign_cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>