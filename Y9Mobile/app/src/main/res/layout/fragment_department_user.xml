<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_hen" >

        <TextView
            android:id="@+id/department_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/usergroup"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
	<com.yun9.mobile.imageloader.fragment.MyGridView  
		       android:id="@+id/userimagegridview"  
		       android:layout_width="match_parent"  
		       android:layout_height="wrap_content"  
		       android:columnWidth="60dp"  
		       android:layout_marginLeft="10dp"
		       android:numColumns="5"  
		       android:layout_marginRight="10dp"
		       android:verticalSpacing="2dp"  
		       android:horizontalSpacing="2dp"  
		       android:stretchMode="columnWidth"  
		       android:gravity="center"  
		       /> 

	<com.yun9.mobile.roundimage.RoundImageView
        android:id="@+id/adduser"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/add_user_department"
        android:contentDescription="@string/app_name" />  
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_hen" >

        <TextView
            android:id="@+id/dept_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/supdepartment"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
	
	<com.yun9.mobile.imageloader.fragment.MyGridView  
		       android:id="@+id/departmentimagegridview"  
		       android:layout_width="match_parent"  
		       android:layout_height="wrap_content"  
		       android:columnWidth="60dp"  
		       android:layout_marginLeft="10dp"
		       android:numColumns="5"  
		       android:layout_marginRight="10dp"
		       android:verticalSpacing="2dp"  
		       android:horizontalSpacing="2dp"  
		       android:stretchMode="columnWidth"  
		       android:gravity="center"  
		       /> 
		       
	<com.yun9.mobile.roundimage.RoundImageView
        android:id="@+id/adddepartment"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/add_user_department"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/app_name" />
</LinearLayout>
</ScrollView>