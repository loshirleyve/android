<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0sp"
        android:listSelector="@drawable/grouplist_item_bg_normal"
        android:scrollingCache="false" >
    </ListView>
     <FrameLayout
                    android:id="@+id/topic_divider_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@null"
                        android:background="#DFDFDF" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
              			android:layout_marginLeft="10dp"
              			android:text="@string/top_topic"
                        android:background="#DFDFDF" 
                        android:contentDescription="@null"/>
            </FrameLayout>
<ListView
        android:id="@+id/topic_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0sp"
        android:listSelector="@drawable/grouplist_item_bg_normal"
        android:scrollingCache="false" ></ListView>
</LinearLayout>