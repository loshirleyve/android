<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <Button
        android:id="@+id/btnDefaultPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位置-默认模式"
        />
        
		<Button
        android:id="@+id/btnDakaPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位置-打卡模式"
        />

        <Button
                android:id="@+id/btnDakaPositionCallBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="位置-打卡模式-带回调"
        />


        
    </LinearLayout>
    
</ScrollView>
