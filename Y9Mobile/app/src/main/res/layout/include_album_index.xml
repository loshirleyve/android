<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_local"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back_white"
            android:text="@string/localPic"
            android:textColor="@color/black" />

        <View
            android:id="@+id/view_local"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/blue" />
    </RelativeLayout>

    <View
        android:layout_width="0.8dp"
        android:layout_height="match_parent"
        android:background="@color/lightblue" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
        <Button
            android:id="@+id/btn_document"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back_white"
            android:text="文档"
            android:textColor="@color/black" />
        <View
            android:id="@+id/view_document"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/blue" 
            android:visibility="gone" 
            />
    </RelativeLayout>

    <View
        android:layout_width="0.8dp"
        android:layout_height="match_parent"
        android:background="@color/lightblue" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_netWork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back_white"
            android:text="@string/netWorkPic"
             />

        <View
            android:id="@+id/view_netWork"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/blue"
            android:visibility="gone" />
    </RelativeLayout>

    
        <View
            android:visibility="gone"
        android:layout_width="0.8dp"
        android:layout_height="match_parent"
        android:background="@color/lightblue" />
    
        <RelativeLayout
            android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_netDocument"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back_white"
            android:text="云文档"
            />

        <View
            android:id="@+id/view_netDocument"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/blue"
            android:visibility="gone" />
    </RelativeLayout>
    
</LinearLayout>