<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/iv_topic_headPic"
            android:src="@drawable/topic_image_default"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/complete"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:id="@+id/tv_topic_name"
            android:layout_alignTop="@+id/iv_topic_headPic"
            android:layout_toRightOf="@+id/iv_topic_headPic"
            android:layout_toEndOf="@+id/iv_topic_headPic"
            android:layout_toLeftOf="@+id/iv_topic_lable"
            android:layout_toStartOf="@+id/iv_topic_lable"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:id="@+id/tv_topic_explain"
            android:layout_below="@+id/tv_topic_name"
            android:layout_alignLeft="@+id/tv_topic_name"
            android:layout_alignStart="@+id/tv_topic_name"
            android:layout_alignRight="@+id/tv_topic_name"
            android:layout_alignEnd="@+id/tv_topic_name"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/searchbar_textfield_topic_icon"
            android:layout_margin="10dp"
            android:id="@+id/iv_topic_lable"
            android:layout_alignTop="@+id/tv_topic_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/complete"/>
</RelativeLayout>