<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title" >

            <ImageButton
                android:id="@+id/btn_get_return"
                style="@style/title_button_left"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mini_webview_back" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip" >

                    <TextView
                        android:id="@+id/tvNetAlbumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxWidth="120.0dip"
                        android:minWidth="50.0dip"
                        android:singleLine="true"
                        android:text="云相册"
                        android:textSize="18.0sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/titleDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxWidth="120.0dip"
                        android:minWidth="50.0dip"
                        android:singleLine="true"
                        android:text="文档"
                        android:textSize="18.0sp"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llAlbumTitleMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip" >

                    <TextView
                        android:id="@+id/tvLocalAlbumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxWidth="120.0dip"
                        android:minWidth="50.0dip"
                        android:singleLine="true"
                        android:text="本地相册"
                        android:textSize="18.0sp" />

                    <ImageView
                        android:id="@+id/icLocalAlbumArrow"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/ibAlbumOption"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_actionbar_more" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightblue" />

        <include
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            layout="@layout/include_album_index" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_getPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/llHeader" />

    <LinearLayout
        android:id="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/title"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightblue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/cbOriginalPhoto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:button="@drawable/chk_selector" />

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_back_title"
                android:text="@string/complete" />

            <TextView
                android:id="@+id/tvOrigin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/cbOriginalPhoto"
                android:gravity="center"
                android:text="原图"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>