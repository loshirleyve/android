<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#AFAFAF"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.yun9.mobile.framework.view.TitleBarView
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        />
    
    <LinearLayout 
        android:id="@+id/order_info_ll"
        android:background="@drawable/view_border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_title"
        android:padding="10dp">
        
        <TextView 
            android:id="@+id/order_company_text"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="5dp"
        	android:textSize="16sp"
            />
        
        <TextView 
            android:id="@+id/order_number_text"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="5dp"
        	android:textSize="16sp"
            />
        
        <TextView 
            android:id="@+id/order_client_text"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="5dp"
        	android:textSize="16sp"
            />
        
        <TextView 
            android:id="@+id/order_salesman_text"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="5dp"
        	android:textSize="16sp"
            />
        
        <TextView 
            android:id="@+id/order_price_text"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="5dp"
        	android:textSize="16sp"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
       	android:layout_height="match_parent"
       	android:layout_below="@+id/order_info_ll"
       	android:layout_above="@+id/order_submit_btn">
        
        <TextView 
	        android:id="@+id/order_product_text"
	        android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:padding="10dp"
	       	android:text="@string/order_product"
	       	android:textSize="18sp"
	       	android:textColor="@android:color/black"
	        />
	    
	    <LinearLayout 
	        android:id="@+id/order_product_ll"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	       	android:layout_height="wrap_content">
	        
	        <ImageView
	        	android:id="@+id/order_product_picture_image"
	        	android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="0.3"
	            android:layout_margin="5dp"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/descr_image"
				android:scaleType="centerCrop"	
	            />
	        
		    <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.7"
	            android:paddingLeft="5dp">
		
		        <TextView
	            	android:id="@+id/order_product_company_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:textSize="15sp"
	                />
		
		        <RelativeLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="10dp">
		
		            <TextView
	                	android:id="@+id/order_product_name_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:textSize="18sp"
	                    android:textColor="@android:color/black"
	                    />
		
		            <TextView
	                	android:id="@+id/order_product_price_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginRight="10dp"
	                    android:textSize="18sp"
	                    android:textColor="@android:color/black"
	                    />
		
		        </RelativeLayout>
		
		        <TextView
	            	android:id="@+id/order_product_introduce_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="10dp"
	                android:textSize="15sp"
	                />
		
		    </LinearLayout>
	        
	    </LinearLayout>
        
    </LinearLayout>
    
    <Button
	    android:id="@+id/order_submit_btn"
	    android:background="@drawable/btn_back_white"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_margin="3dp"
	    android:padding="10dp"
	    android:text="@string/order_submit"
	    android:textSize="24sp"
	    android:textColor="@android:color/holo_orange_dark"
	    />

</RelativeLayout>
