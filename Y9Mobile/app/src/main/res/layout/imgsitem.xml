<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/gridViewImages"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/lightgray"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sign"/>

    <ImageView
        android:id="@+id/gridViewCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/commercialize_payment_icon_success"
        android:layout_alignRight="@+id/gridViewImages"
        android:layout_alignTop="@+id/gridViewImages"
        android:contentDescription="@string/noPic"/>

</RelativeLayout>
